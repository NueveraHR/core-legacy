{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@hrms-facades/*": [
        "apps/hrms-facade/src/*"
      ],
      "@hrms-core/*": [
        "apps/hrms-core/src/*"
      ],
      "@hrms-api/*": [
        "apps/hrms-api/src/*"
      ],
      "@hrms-db/*": [
        "apps/hrms-db/src/*"
      ],
      "@libs/env": [
        "libs/env/src"
      ],
      "@libs/env/*": [
        "libs/env/src/*"
      ],
      "@libs/logger": [
        "libs/logger/src"
      ],
      "@libs/logger/*": [
        "libs/logger/src/*"
      ],
      "@libs/config": [
        "libs/config/src"
      ],
      "@libs/config/*": [
        "libs/config/src/*"
      ]
    }
  }
}